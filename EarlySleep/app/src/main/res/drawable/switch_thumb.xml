<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp">

                <shape android:shape="oval">

                    <stroke
                        android:width="1dp"
                        android:color="@color/white"/>
                    <size android:width="15dp"
                    android:height="15dp"/>
                    <solid android:color="#ffffff"></solid>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>